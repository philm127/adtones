@using EFMVC.Web.Areas.Admin.Models;
@model List<AdvertCategoryResult>
<div class="row">
    @if (TempData["status"] != null)
    {
        <div class="alert alert-success alert-dismissable"  id="status" >
            <button aria-hidden="true" data-dismiss="alert" class="close" id="advertcategorylabelclosefailure"  type="button">×</button>
            @TempData["status"]
        </div>
    }
    <div class="alert alert-success alert-dismissable" id="advertcategorylabelfosuc" style="display:none;">
        <button aria-hidden="true" data-dismiss="alert" class="close" id="advertcategorylabelclosesuccess" type="button">×</button>
        <span id="advertcategorylabelsuceess">Record updated successfully</span>
    </div>
    <div class="alert alert-danger alert-dismissable" id="advertcategorylabelfoerror" style="display:none;">
        <button aria-hidden="true" class="close" id="advertcategorylabelcloseerror" type="button">×</button>
        <span id="advertcategorylabelerror"></span>
    </div>
</div>
<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover dataTables-advertcategory">
        <thead>
            <tr>

                <th width="40%">Advert Category Name</th>
                <th width="25%">Country</th>
                <th width="25%">Created Date</th>
                <th width="10%">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (AdvertCategoryResult result in Model)
            {
            <tr class="gradeX">

                <td width="40%">@result.Name</td>
                <td width="25%">@result.CountryName</td>
                <td width="25%">@result.CreatedDate</td>
                <td width="10%">
                    <a class="btn btn-danger btn-xs" href='@Url.Action("UpdateAdvertCategory", "AdvertCategory", new { @id = result.AdvertCategoryId })'>Update</a>
                    <button class="btn btn-danger btn-xs deleteButton" type="button" data-id="@result.AdvertCategoryId" data-name="@result.Name">Delete</button>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>