@using EFMVC.Web.Areas.Admin.Models;
@model List<CountryTaxResult>
<div class="row">
    @if (TempData["status"] != null)
    {
        <div class="alert alert-success alert-dismissable">
            <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
            @TempData["status"]
        </div>
    }
</div>
<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover dataTables-countryTax">
        <thead>
            <tr>

                <th>Country</th>
                <th>Short Name</th>
                @*<th>Percantage</th>*@
                <th>Percentage</th>
                <th>Created Date</th>
                @*<th>Status</th>*@
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (CountryTaxResult result in Model)
            {
                <tr class="gradeX">

                    <td>@result.Name</td>
                    <td>@result.ShortName</td>
                    <td>@result.TaxPercantage.ToString("F2")</td>
                    <td>@result.CreatedDate</td>
                    @*<td>
                        @if (result.Status == 1)
                        {
                            <label class="label label-primary">Active</label>
                        }
                        else if (result.Status == 2)
                        {
                            <label class="label label-danger">Inactive</label>
                        }
                    </td>*@
                    <td>
                        <a class="btn btn-danger btn-xs" href='@Url.Action("UpdateCountryTax","CountryTax",new {@id=result.Id })'>Update</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>