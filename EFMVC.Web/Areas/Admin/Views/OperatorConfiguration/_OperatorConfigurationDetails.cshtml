@using EFMVC.Web.Areas.Admin.Models;
@model List<OperatorConfigurationResult>
<div class="row">
    @if (TempData["status"] != null)
    {
        <div class="alert alert-success alert-dismissable">
            <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
            @TempData["status"]
        </div>
    }
</div>
<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover dataTables-operatorConfiguration">
        <thead>
            <tr>
                <th>Operator Name</th>
                <th>Days</th>
                <th>IsActive</th>
                <th>Created Date</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var result in Model)
            {
                <tr class="gradeX">
                    <td>@result.OperatorName</td>
                    <td>@result.Days</td>
                    @if (result.IsActive == true)
                    {
                        <td>ON</td>
                    }
                    else
                    {
                        <td>OFF</td>
                    }
                    <td>@result.Addeddate</td>
                    <td>
                        <a class="btn btn-danger btn-xs" href='@Url.Action("UpdateOperatorConfiguration", "OperatorConfiguration", new { @id = result.OperatorConfigurationId })'>Update</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
