@model EFMVC.Web.ViewModels.UserProfileRadioFormModel

<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            @*<div class="ibox-title">
                    <h5>Radio</h5>

                </div>*@
            <div class="ibox-content">
                <div class="alert alert-success alert-dismissable" id="dvradiosuc" style="display:none;">
                    <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
                    <span id="cbudsuceess">Record updated successfully</span>
                </div>


                <div class="alert alert-danger alert-dismissable" id="dvradioerror" style="display:none;">
                    <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
                    <span id="cradioerrror"></span>
                </div>
                @using (Ajax.BeginForm("SaveRadio", "UserAdminProfile",
null,
new AjaxOptions() { HttpMethod = "post", InsertionMode = InsertionMode.Replace, OnSuccess = "getresultradio", OnBegin = "progressbar" },
new { @class = "form-horizontal" }))
                {
                    @Html.HiddenFor(model => model.Id)
                    @Html.HiddenFor(model => model.UserProfileId)
                    <div class="form-group">
                        <div class="row">
                            <h3 class="col-lg-4 col-lg-wth">@Html.LabelFor(model => model.National_Radio)</h3>
                            <h3 class="col-lg-4 col-lg-wth">@Html.LabelFor(model => model.Local_Radio)</h3>
                            <h3 class="col-lg-4 col-lg-wth">@Html.LabelFor(model => model.Music_Radio)</h3>
                        </div>
                        <div class="row">
                            <div class="col-lg-4 col-lg-wth" style="line-height:28px;">
                                <div class="radio i-checks"><label>@Html.RadioButtonFor(model => model.National_Radio, "A")Don&apos;t Know</label></div>
                                <div class="radio i-checks"><label>@Html.RadioButtonFor(model => model.National_Radio, "B")Never</label></div>
                                <div class="radio i-checks"><label>@Html.RadioButtonFor(model => model.National_Radio, "C")Rarely</label></div>
                                <div class="radio i-checks"><label>@Html.RadioButtonFor(model => model.National_Radio, "D")Regular</label></div>
                                @Html.ValidationMessageFor(model => model.National_Radio)
                            </div>
                            <div class="col-lg-4 col-lg-wth" style="line-height:28px;">
                                <div class="radio i-checks"><label>@Html.RadioButtonFor(model => model.Local_Radio, "A")Don&apos;t Know</label></div>
                                <div class="radio i-checks"><label>@Html.RadioButtonFor(model => model.Local_Radio, "B")Never</label></div>
                                <div class="radio i-checks"><label>@Html.RadioButtonFor(model => model.Local_Radio, "C")Rarely</label></div>
                                <div class="radio i-checks"><label>@Html.RadioButtonFor(model => model.Local_Radio, "D")Regular</label></div>
                                @Html.ValidationMessageFor(model => model.Local_Radio)
                            </div>
                            <div class="col-lg-4 col-lg-wth" style="line-height:28px;">
                                <div class="radio i-checks"><label>@Html.RadioButtonFor(model => model.Music_Radio, "A")Don&apos;t Know</label></div>
                                <div class="radio i-checks"><label>@Html.RadioButtonFor(model => model.Music_Radio, "B")Never</label></div>
                                <div class="radio i-checks"><label>@Html.RadioButtonFor(model => model.Music_Radio, "C")Rarely</label></div>
                                <div class="radio i-checks"><label>@Html.RadioButtonFor(model => model.Music_Radio, "D")Regular</label></div>
                                @Html.ValidationMessageFor(model => model.Music_Radio)
                            </div>
                        </div>
                        <div class="row" style="padding-top:15px;">
                            <h3 class="col-lg-4 col-lg-wth">@Html.LabelFor(model => model.Sport_Radio)</h3>
                            <h3 class="col-lg-4 col-lg-wth">@Html.LabelFor(model => model.Talk_Radio)</h3>

                        </div>
                        <div class="row">
                            <div class="col-lg-4 col-lg-wth" style="line-height:28px;">
                                <div class="radio i-checks"><label>@Html.RadioButtonFor(model => model.Sport_Radio, "A")Don&apos;t Know</label></div>
                                <div class="radio i-checks"><label>@Html.RadioButtonFor(model => model.Sport_Radio, "B")Never</label></div>
                                <div class="radio i-checks"><label>@Html.RadioButtonFor(model => model.Sport_Radio, "C")Rarely</label></div>
                                <div class="radio i-checks"><label>@Html.RadioButtonFor(model => model.Sport_Radio, "D")Regular</label></div>
                                @Html.ValidationMessageFor(model => model.Sport_Radio)
                            </div>
                            <div class="col-lg-4 col-lg-wth" style="line-height:28px;">
                                <div class="radio i-checks"><label>@Html.RadioButtonFor(model => model.Talk_Radio, "A")Don&apos;t Know</label></div>
                                <div class="radio i-checks"><label>@Html.RadioButtonFor(model => model.Talk_Radio, "B")Never</label></div>
                                <div class="radio i-checks"><label>@Html.RadioButtonFor(model => model.Talk_Radio, "C")Rarely</label></div>
                                <div class="radio i-checks"><label>@Html.RadioButtonFor(model => model.Talk_Radio, "D")Regular</label></div>
                                @Html.ValidationMessageFor(model => model.Talk_Radio)
                            </div>
                        </div>
                    </div>
                 
                 

                    <div class="form-group">
                        <div class="col-lg-1">
                            <button class="btn btn-blue" type="submit">Save</button>

                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    var progressbar = function (data) {
        $(".spiner-example").show();
    };
    var getresultradio = function (data) {
        $(".spiner-example").hide();
        if (data == "success") {
            $("#dvradiosuc").show();
            $("#dvradioerror").hide();
        }
        else
        {
            if (data == "notauthorise") {
                window.location.href = '@Url.Action("Index","Landing", new { Area = "" })';
            }
            $("#cradioerrror").html(data);
            $("#dvtvsuc").hide();
            $("#dvradiosuc").show();
        }
    };
</script>