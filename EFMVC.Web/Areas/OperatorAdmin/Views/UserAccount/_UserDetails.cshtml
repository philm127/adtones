@using EFMVC.Web.Areas.UsersAdmin.Models;
@model List<UserResult>


<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover dataTables-usermanagement" id="usermanagement">
        <thead>
            <tr>

                <th>Email</th>
                <th>MSISDN</th>
                <th>User</th>
                <th>Role</th>
                <th>Created Date</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (UserResult result in Model)
            {
                <tr class="gradeX">
                    @if (result.Email == null)
                    {
                        <td>-</td>
                    }
                    else
                    {
                        <td>@result.Email</td>
                    }
                    <td>@result.MSISDN</td>
                    <td>@result.Name</td>
                    <td>@result.RoleName</td>
                    <td>@result.CreatedDate</td>
                    <td>@result.Status</td>
                    @if (result.Activated == 1)
                    {
                        <td>
                            <a class="btn btn-danger btn-xs" onclick="updatestatus(' + row.Id + ',2)">Suspend</a>
                        </td>
                    }
                    else if (result.Activated == 2 || result.Activated == 3)
                    {
                        <td>
                            <a class="btn btn-blue btn-xs" onclick="updatestatus(' + row.Id + ',1)">Approve</a>
                        </td>
                    }
                    else if (result.Activated == 0)
                    {
                        <td>
                            <a class="btn btn-blue btn-xs" onclick="updatestatus(' + row.Id + ',1)">Approve</a> &nbsp;
                            <a class="btn btn-danger btn-xs" onclick="updatestatus(' + row.Id + ',2)">Suspend</a>
                        </td>
                    }
                    else
                    {
                        <td></td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>
