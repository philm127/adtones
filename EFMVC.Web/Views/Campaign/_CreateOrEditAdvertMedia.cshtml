@model EFMVC.Web.ViewModels.AdvertFormModel
@*<script src="~/Scripts/jquery-1.5.1.min.js" type="text/javascript"></script>*@
@*<script src="~/Scripts/jquery.validate.min.js" type="text/javascript"></script>*@
@*<script src="~/Scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>*@
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.1/jquery.min.js"> </script>
<script type="text/javascript" src="~/Scripts/autoNumeric/autoNumeric.js"> </script>
<script type="text/javascript">
    jQuery(function($) {
        $('.auto').autoNumeric('init');
    });
</script>

@Html.HiddenFor(model => model.AdvertId)
@Html.HiddenFor(model => model.CreatedDateTime)
@Html.HiddenFor(model => model.UpdatedDateTime)

<div class="row">
    <div class="large-12 columns">
        <h4>Adverts</h4>
        <h6>Upload you advertisment media file here.</h6>
    </div>
</div>

<div class="clr10"></div>

<div class="panel">
    <div class="row">
        <div class="large-6 columns">
            <div class="panel">
                <div class="editor-label">
                    @Html.LabelFor(model => model.AdvertName)
                </div>
                <div class="clr10"></div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.AdvertName)
                    @Html.ValidationMessageFor(model => model.AdvertName)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.AdvertDescription)
                </div>
                <div class="clr10"></div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.AdvertDescription)
                    @Html.ValidationMessageFor(model => model.AdvertDescription)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.Brand)
                </div>
                <div class="clr10"></div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Brand)
                    @Html.ValidationMessageFor(model => model.Brand)
                </div>

                <div class="editor-label">
                    @Html.Label("Media File")
                </div>
                <div class="clr10"></div>
                <div class="editor-field">
                    <input type="file" name="mediaFile" />
                    @Html.ValidationMessageFor(model => model.Brand)
                </div>
            </div>
        </div>
    </div>
</div>