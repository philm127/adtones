@{
    ViewBag.Title = "Register Success";
    Layout = null;
}


<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>adtones | Register</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Fonts/font-awesome/css/font-awesome.css" rel="stylesheet">

    <link href="~/Content/animate.css" rel="stylesheet">
    <link href="~/Content/style.css" rel="stylesheet">
</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen   animated fadeInDown">
        <div>
            <div>

                <h1 class="logo-name">ad+</h1>

            </div>

            @{
                var verifyAdvertiserResult = (string)ViewData["VerifyAdvertiserResult"];

                if (verifyAdvertiserResult == "success")
                {
                    <div class="row">
                        <div class="large-12 columns">

                            <h5>Your email address has now been verified.</h5>

                            <div class="clr10"></div>

                            You will shortly be contacted by a member of the adtones team to discuss your requirements.

                            <div class="clr20"></div>

                        </div>
                    </div>
                }
                else
                {
                    <div class="row">
                        <div class="large-12 columns">

                            <h5>We are unable to verify your email address.</h5>

                        </div>
                    </div>
                }
                <a class="btn btn-sm btn-white btn-block" href="@Url.Action("Index", "Landing")">Back to Login</a>
            }
        </div>
    </div>
</body>
</html>

<div class="row">
    <div class="large-8 columns large-centered">

        <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"> </script>
        <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"> </script>



    </div>
</div>
