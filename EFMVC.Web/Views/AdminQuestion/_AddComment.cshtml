@using EFMVC.Web.ViewModels
@model QuestionCommentFormModel
<div class="modal inmodal" id="myModal2" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated flipInY">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">Add Comment</h4>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("AddComment", "AdminQuestion", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
                {

                    @Html.HiddenFor(Model=>Model.QuestionId)
                    @Html.HiddenFor(Model => Model.Title)
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Description</label>
                        <div class="col-lg-6">
                            <div class="form-group">
                                @Html.TextAreaFor(Model=>Model.Description,new {@class= "form-control", placeholder = "Description", rows = "6", cols = "10" })
                               
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Upload Image</label>
                        <div class="col-lg-6">
                            <div class="btn-group">
                                <label title="Upload image file" class="btn btn-gray">
                                    <input type="file" name="commentfile" id="commentfile"  class="hide">
                                    Select Image
                                </label>

                            </div>
                            <label id="filename">

                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-sm btn-blue" type="submit">Submit</button>
                            <button class="btn btn-sm btn-white" type="button" data-dismiss="modal">Cancel</button>
                        </div>
                    </div>

                }
            </div>

        </div>
    </div>
</div>
