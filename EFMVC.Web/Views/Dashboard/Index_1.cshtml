<script type="text/javascript">
    function dataTableSetup() {
        $('.dataTables-campaign').DataTable({
            "info": false,
            bFilter: false,
            "bLengthChange": false,
            "language": {
                "infoEmpty": "No Record Found."
            }
        });
    }
    $(document).ready(function () {
        $("#reset").click(function () {
            $("#Item2_ClientId").val('0');
            $("#Item2_CampaignName").val('');
            $("#Item2_Fromdate").val('');
            $("#Item2_Todate").val('');
            $("#Item2_Status").val('0');
            $("#Item2_FromSpend").val('');
            $("#Item2_ToSpend").val("");
            $("#Item2_FromPlays").val("");
            $("#Item2_ToPlays").val("");
            $("#Item2_FromAvgbid").val("");
            $("#Item2_ToAvgbid").val("");
            $.ajax({
                data: null,
                datatype: "text/plain",
                type: "POST",
                url: '@Url.Action("SearchCampain","Dashboard")',
                cache: false,
                success: function (data) {
                    $("#compaignList").html(data);
                    dataTableSetup();
                }
            });
        });
        $('.dataTables-campaign').DataTable({
            "info": false,
            bFilter: false,
            "bLengthChange": false,
            "language": {
                "infoEmpty": "No Record Found."
            }
        });
        
            $('.dataTables-example').DataTable({
                "info": false,
                bFilter: false,
                "bLengthChange": false,
                "language": {
                    "infoEmpty": "No Record Found."
                }
            });
          
            var $image = $(".image-crop > img")
            $($image).cropper({
                aspectRatio: 1.618,
                preview: ".img-preview",
                done: function (data) {
                    // Output the result data for cropping image.
                }
            });
           
        
            $('#data_5 .input-daterange').datepicker({
                keyboardNavigation: false,
                forceParse: false,
                autoclose: true
            });

          

            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
           
            $(".touchspin2").TouchSpin({
                min: 0,
                max: 100,
                step: 0.1,
                decimals: 2,
                boostat: 5,
                maxboostedstep: 10,
                postfix: '%',
                buttondown_class: 'btn btn-white',
                buttonup_class: 'btn btn-white'
            });

            $(".touchspin3").TouchSpin({
                verticalbuttons: true,
                buttondown_class: 'btn btn-white',
                buttonup_class: 'btn btn-white'
            });


        });


