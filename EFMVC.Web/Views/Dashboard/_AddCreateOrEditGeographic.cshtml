<script type="text/javascript">
    var progressbar = function (data) {
        $(".spiner-example").show();
    };
    var getresultGeographicprofile = function (data) {
        $(".spiner-example").hide();
        if (data == "success") {
            $("#dvadvertsuc").show();
            $("#dvadverterror").hide();
        }
        else {
            if (data == "notauthorise") {
                window.location.href = '@Url.Action("Index","Landing")';
            }
            $("#cadverterrror").html(data);
            $("#dvadvertsuc").hide();
            $("#dvadverterror").show();
        }
    };
</script>