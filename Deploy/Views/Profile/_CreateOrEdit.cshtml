@model EFMVC.Web.ViewModels.UserProfileFormModel
@*<script src="~/Scripts/jquery-1.5.1.min.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.validate.min.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>*@

@Html.HiddenFor(m => m.UserProfileId);
@Html.HiddenFor(m => m.MSISDN)

<div class="row">
    <div class="large-3 small-1 columns">
        &nbsp;
    </div>
    <div class="large-6 small-10 columns">
        @{
            if (Model == null || Model.UserProfileId == 0)
            {
                <h5>Profile</h5>
                <h6>Create your profile.</h6>
            }
            else
            {
                <h5>Profile</h5>
                <h6>Edit your profile.</h6>
            }
        }
    </div>
    <div class="large-3 small-1 columns">
        &nbsp;
    </div>
</div>

<div class="clr10"></div>

<div class="row">
    <div class="large-3 small-1 columns">
        &nbsp;
    </div>
    <div class="large-6 small-10 columns">
        
        <div class="row">
            <div class="large-12 columns large-centered">
                <div class="editor-label">
                    @Html.LabelFor(model => model.DOB)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.DOB)
                    @Html.ValidationMessageFor(model => model.DOB)
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="large-12 columns large-centered">

                <div class="editor-label">
                    @Html.LabelFor(model => model.Location)
                </div>
                <div class="editor-field">
                    @Html.DropDownListFor(model => model.Location, Model.LocationList, "--Select--")
                    @Html.ValidationMessageFor(model => model.Location)
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="large-12 columns large-centered">

                <div class="editor-label">
                    @Html.LabelFor(model => model.Gender)
                </div>
                <div class="editor-field">
                    @Html.DropDownListFor(model => model.Gender, Model.GenderList, "--Select--")
                    @Html.ValidationMessageFor(model => model.Gender)
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="large-12 columns large-centered">

                <div class="editor-label">
                    @Html.LabelFor(model => model.HouseholdStatus)
                </div>
                <div class="editor-field">
                    @Html.DropDownListFor(model => model.HouseholdStatus, Model.HouseholdStatusList, "--Select--")
                    @Html.ValidationMessageFor(model => model.HouseholdStatus)
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="large-12 columns large-centered">

                <div class="editor-label">
                    @Html.LabelFor(model => model.RelationshipStatus)
                </div>
                <div class="editor-field">
                    @Html.DropDownListFor(model => model.RelationshipStatus, Model.RelationshipStatusList, "--Select--")
                    @Html.ValidationMessageFor(model => model.RelationshipStatus)
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="large-12 columns large-centered">

                <div class="editor-label">
                    @Html.LabelFor(model => model.IncomeBracket)
                </div>
                <div class="editor-field">
                    @Html.DropDownListFor(model => model.IncomeBracket, Model.IncomeBracketList, "--Select--")
                    @Html.ValidationMessageFor(model => model.IncomeBracket)
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="large-12 columns large-centered">

                <div class="editor-label">
                    @Html.LabelFor(model => model.Education)
                </div>
                <div class="editor-field">
                    @Html.DropDownListFor(model => model.Education, Model.EducationList, "--Select--")
                    @Html.ValidationMessageFor(model => model.Education)
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="large-12 columns large-centered">

                <div class="editor-label">
                    @Html.LabelFor(model => model.WorkingStatus)
                </div>
                <div class="editor-field">
                    @Html.DropDownListFor(model => model.WorkingStatus, Model.WorkingStatusList, "--Select--")
                    @Html.ValidationMessageFor(model => model.WorkingStatus)
                </div>
            </div>
        </div>
        
    </div>

    <div class="large-3 small-1 columns">
        &nbsp;
    </div>
</div>