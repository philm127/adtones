@model EFMVC.Web.ViewModels.CampaignProfileFormModel
@*<script src="~/Scripts/jquery-1.5.1.min.js" type="text/javascript"></script>*@
@*<script src="~/Scripts/jquery.validate.min.js" type="text/javascript"></script>*@
@*<script src="~/Scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>*@
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.1/jquery.min.js"> </script>
<script type="text/javascript" src="~/Scripts/autoNumeric/autoNumeric.js"> </script>
<script type="text/javascript">
    jQuery(function($) {
        $('.auto').autoNumeric('init');
    });
</script>

@Html.HiddenFor(model => model.CreatedDateTime)
@Html.HiddenFor(model => model.UpdatedDateTime)

<div class="row">
    <div class="large-12 columns">
        <h4>Campaign</h4>
        
        @{
            if (Model.CampaignProfileId == 0)
            {
                <h6>Setup your new campaign profile.</h6>
            }
            else
            {
                <h6>Edit your campaign profile.</h6>
            }
        }

    </div>
</div>

<div class="clr10"></div>
<div class="row">
    <div class="large-6 columns">
        <div class="panel">
            <div class="editor-label">
                @Html.LabelFor(model => model.CampaignName)
            </div>
            <div class="clr10"></div>
            <div class="editor-field">
                @Html.EditorFor(model => model.CampaignName)
                @Html.ValidationMessageFor(model => model.CampaignName)
            </div>
                
            <div class="editor-label">
                @Html.LabelFor(model => model.CampaignDescription)
            </div>
            <div class="clr10"></div>
            <div class="editor-field">
                @Html.EditorFor(model => model.CampaignDescription)
                @Html.ValidationMessageFor(model => model.CampaignDescription)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.MaxDailyBudget)
            </div>
            <div class="clr10"></div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.MaxDailyBudget, new {@class = "auto", data_a_dec = ".", data_a_sep = ","})
                @Html.ValidationMessageFor(model => model.MaxDailyBudget)
            </div>
                
            <div class="editor-label">
                @Html.LabelFor(model => model.TotalBudget)
            </div>
            <div class="clr10"></div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.TotalBudget, new {@class = "auto", data_a_dec = ".", data_a_sep = ","})
                @Html.ValidationMessageFor(model => model.TotalBudget)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.MaxBid)
            </div>
            <div class="clr10"></div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.MaxBid, new {@class = "auto", data_a_dec = ".", data_a_sep = ","})
                @Html.ValidationMessageFor(model => model.MaxBid)
            </div>
                
            <div class="editor-label">
                @Html.LabelFor(model => model.Active)
            </div>
            <div class="clr10"></div>
            <div class="editor-field">
                @Html.CheckBoxFor(model => model.Active)
                @Html.ValidationMessageFor(model => model.Active)
            </div>

        </div>
    </div>
</div>