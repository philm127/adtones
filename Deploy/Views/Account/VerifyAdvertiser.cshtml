@{
    ViewBag.Title = "Success";
}

<div class="row">
    <div class="large-8 columns large-centered">

        <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"> </script>
        <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"> </script>

        @{
            var verifyAdvertiserResult = (string) ViewData["VerifyAdvertiserResult"];

            if (verifyAdvertiserResult == "success")
            {
                <div class="row">
                    <div class="large-12 columns">    
                    
                        <h5>Your email address has now been verified.</h5>
                    
                        <div class="clr10"></div>    
                    
                        You will shortly be contacted by a member of the Arthar team to discuss your requirements. 
                    
                        <div class="clr20"></div>    

                    </div>
                </div>
            }
            else
            {
                <div class="row">
                    <div class="large-12 columns">    
                    
                        <h5>We are unable to verify your email address.</h5>

                    </div>
                </div>
            }
        }
    </div>
</div>