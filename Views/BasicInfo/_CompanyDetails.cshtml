<div class="col-lg-6">
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h5>Company Details</h5>

        </div>
        <div class="ibox-content">
            <form class="form-horizontal">

                <div class="form-group">
                    <label class="col-lg-3 control-label">Company Name</label>

                    <div class="col-lg-9">
                        <input type="text" placeholder="Company Name" class="form-control"> 
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Address</label>

                    <div class="col-lg-9"><textarea placeholder="Address" class="form-control"></textarea></div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Additional Address</label>

                    <div class="col-lg-9"><textarea placeholder="Additional Address" class="form-control"></textarea></div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Town / City / Locality</label>

                    <div class="col-lg-9"><input type="text" placeholder="Locality" class="form-control"></div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Post Code / Zip Code</label>

                    <div class="col-lg-9"><input type="text" placeholder="Zip Code" class="form-control"></div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Country</label>

                    <div class="col-lg-9">
                        <select class="input-sm form-control input-s-sm inline valid">
                            <option value="0">--Select Country--</option>
                            <option value="1">UK</option>
                            <option value="2">Australia</option>
                            <option value="2">US</option>
                        </select>

                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-offset-3 col-lg-9">
                        <button class="btn btn-sm btn-blue" type="submit">Update</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>