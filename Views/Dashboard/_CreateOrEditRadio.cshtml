                        @Html.LabelFor(model => model.NationalQuestion, new { @class = "col-lg-3 control-label" })


                        <div class="col-lg-9 editor-field" style="line-height:28px;">
                            @foreach (var NationalQuestion in @Model.NationalQuestion)
                            {
                                var checkBoxId = "chk" + NationalQuestion.QuestionValue;
                                var tdId = "td" + NationalQuestion.QuestionValue;

                                <table>
                                    <tr>
                                        @if (NationalQuestion.Selected)
                                        {
                                            <td>
                                                <input type="checkbox" id="@checkBoxId" checked class="chkclassSocialNetworking i-checks" value="@NationalQuestion.QuestionValue" />
                                            </td>
                                        }
                                        else
                                        {
                                            <td>
                                                <input type="checkbox" id="@checkBoxId" class="chkclassNationalQuestion i-checks" value="@NationalQuestion.QuestionValue" />
                                            </td>
                                        }

                                        <td id="@tdId" style="padding-left:15px;">
                                            @NationalQuestion.QuestionName
                                        </td>
                                    </tr>
                                </table>

                            }
                        </div>


