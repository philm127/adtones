@model EFMVC.Web.ViewModels.CampaignProfileCinemaFormModel
@Html.HiddenFor(model => model.CampaignProfileCinemaId)
@Html.HiddenFor(model => model.CampaignProfileId)
<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Cinema</h5>

            </div>
            <div class="ibox-content">
                <form class="form-horizontal">
                    <div class="form-group">
                        @Html.LabelFor(model => model.CinemaQuestion, new { @class = "col-lg-3 control-label" })


                        <div class="col-lg-9 editor-field" style="line-height:28px;">
                            @foreach (var CinemaQuestion in @Model.CinemaQuestion)
                            {
                                var checkBoxId = "chk" + CinemaQuestion.QuestionValue;
                                var tdId = "td" + CinemaQuestion.QuestionValue;

                                <table>
                                    <tr>
                                        @if (CinemaQuestion.Selected)
                                        {
                                            <td>
                                                <input type="checkbox" id="@checkBoxId" checked class="chkclassCinemaQuestion i-checks" value="@CinemaQuestion.QuestionValue" />
                                            </td>

                                        }
                                        else
                                        {
                                            <td>
                                                <input type="checkbox" id="@checkBoxId" class="chkclassCinemaQuestion i-checks" value="@CinemaQuestion.QuestionValue" />
                                            </td>
                                        }

                                        <td id="@tdId" style="padding-left:15px;">
                                            @CinemaQuestion.QuestionName
                                        </td>
                                    </tr>
                                </table>

                            }
                        </div>


                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-3 col-lg-1">
                            <button class="btn btn-blue" type="submit">Update</button>

                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    </div>
