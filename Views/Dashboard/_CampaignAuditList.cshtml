@using EFMVC.Web.SearchClass
@using EFMVC.Web.Models;
@model List<CampaignAuditResult>
<div class="row">
    <div class="html5buttons">
        <div class="dt-buttons btn-group">

            <a class="btn btn-default buttons-copy buttons-html5" tabindex="0" aria-controls="DataTables_Table_0">
                <span>Copy</span>
            </a>
            @*@Html.ActionLink("CSV", "ExportClientsListToCSV", new { @class = "btn btn-default buttons-csv buttons-html5" })*@
            <a class="btn btn-default buttons-excel buttons-html5" tabindex="0" aria-controls="DataTables_Table_0">
                <span>CSV</span>
            </a><a class="btn btn-default buttons-excel buttons-html5" tabindex="0" aria-controls="DataTables_Table_0"><span>Excel</span></a><a class="btn btn-default buttons-pdf buttons-html5" tabindex="0" aria-controls="DataTables_Table_0"><span>PDF</span></a><a class="btn btn-default buttons-print" tabindex="0" aria-controls="DataTables_Table_0"><span>Print</span></a>
        </div>
    </div>
</div>
<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover dataTables-audit">
        <thead>
            <tr>
                <th>Play id</th>
                <th>User ID</th>
                <th>Start time</th>
                <th>End time</th>
                <th>Length of play</th>
                <th>Ad name</th>

                <th>Status of play</th>
                <th>Play cost</th>
                <th>SMS</th>
                <th>SMS cost</th>
                <th>Email</th>
                <th>Email Cost</th>
                <th>Total Cost</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count > 0)
            {
                foreach (CampaignAuditResult campaignaudit in Model)
                {
                    <tr class="gradeX">
                        <td>@campaignaudit.PlayID</td>
                        <td>@campaignaudit.UserID</td>
                        <td>
                            @campaignaudit.StartDate

                        </td>
                        <td>
                            @campaignaudit.EndDate
                        </td>
                        <td>

                            @campaignaudit.LengthOfPlay
                        </td>
                        <td>
                            <a href='@Url.Action("AdvertDetails", "Advert", new { @id = campaignaudit.AdvertId })'>@campaignaudit.AdvertName</a>

                        </td>
                        <td>
                            @campaignaudit.Status
                        </td>
                        <td>
                            @campaignaudit.PlayCost
                        </td>
                        <td>
                            @campaignaudit.SMS

                        </td>
                        <td>
                            @campaignaudit.SMSCost

                        </td>
                        <td>
                            @campaignaudit.Email

                        </td>
                        <td>
                            @campaignaudit.EmailCost

                        </td>
                        <td>
                            @campaignaudit.TotalCost

                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>