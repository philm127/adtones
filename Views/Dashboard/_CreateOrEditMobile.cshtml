@model EFMVC.Web.ViewModels.CampaignProfileMobileFormModel
@Html.HiddenFor(model => model.CampaignProfileMobileId)
@Html.HiddenFor(model => model.CampaignProfileId)
<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Mobile</h5>

            </div>
            <div class="ibox-content">
                <form class="form-horizontal">
                    <div class="form-group">
                        @Html.LabelFor(model => model.ContractTypeQuestion, new { @class = "col-lg-3 control-label" })


                        <div class="col-lg-9 editor-field" style="line-height:28px;">
                            @foreach (var ContractType in @Model.ContractTypeQuestion)
                        {
                            var checkBoxId = "chk" + ContractType.QuestionValue;
                            var tdId = "td" + ContractType.QuestionValue;

                            <table>
                                <tr>
                                    @if (ContractType.Selected)
                                    {
                                <td>
                                    <input type="checkbox" id="@checkBoxId" checked class="chkclassSocialNetworking i-checks" value="@ContractType.QuestionValue" />
                                </td>
                                    }
                                    else
                                    {
                                <td>
                                    <input type="checkbox" id="@checkBoxId" class="chkclassSocialNetworking i-checks" value="@ContractType.QuestionValue" />
                                </td>
                                    }
                                    <td id="@tdId" style="padding-left:15px;">
                                        @ContractType.QuestionName
                                    </td>
                                </tr>
                            </table>

                        }
                        </div>


                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.SpendQuestion, new { @class = "col-lg-3 control-label" })


                        <div class="col-lg-9 editor-field" style="line-height:28px;">
                            @foreach (var SpendQuestion in @Model.SpendQuestion)
                        {
                            var checkBoxId = "chk" + SpendQuestion.QuestionValue;
                            var tdId = "td" + SpendQuestion.QuestionValue;

                            <table>
                                <tr>
                                    @if (SpendQuestion.Selected)
                                    {
                                <td>
                                    <input type="checkbox" id="@checkBoxId" checked class="chkclassVideoQuestion i-checks" value="@SpendQuestion.QuestionValue" />
                                </td>
                                    }
                                    else
                                    {
                                <td>
                                    <input type="checkbox" id="@checkBoxId" class="chkclassVideoQuestion i-checks" value="@SpendQuestion.QuestionValue" />
                                </td>
                                    }

                                    <td id="@tdId" style="padding-left:15px;">
                                        @SpendQuestion.QuestionName
                                    </td>
                                </tr>
                            </table>

                        }
                        </div>


                    </div>


                    <div class="form-group">
                        <div class="col-lg-offset-3 col-lg-1">
                            <button class="btn btn-blue" type="submit">Update</button>

                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>