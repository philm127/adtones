                                        @if (TerrestrialQuestion.Selected)
                                        {
                                            <td>
                                                <input type="checkbox" id="@checkBoxId" checked class="chkclassMusicQuestion i-checks" value="@TerrestrialQuestion.QuestionValue" />
                                            </td>
                                        }
                                        else
                                        {
                                            <td>
                                                <input type="checkbox" id="@checkBoxId" class="chkclassMusicQuestion i-checks" value="@TerrestrialQuestion.QuestionValue" />
                                            </td>
                                        }

                                        <td id="@tdId" style="padding-left:15px;">
                                            @TerrestrialQuestion.QuestionName
                                        </td>
                                    </tr>
                                </table>

                            }
                        </div>


                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.InternetQuestion, new { @class = "col-lg-3 control-label" })


                        <div class="col-lg-9 editor-field" style="line-height:28px;">
                            @foreach (var InternetQuestion in @Model.InternetQuestion)
                            {
                                var checkBoxId = "chk" + InternetQuestion.QuestionValue;
                                var tdId = "td" + InternetQuestion.QuestionValue;

                                <table>
                                    <tr>
                                        @if (InternetQuestion.Selected)
                                        {
                                            <td>
                                                <input type="checkbox" id="@checkBoxId" checked class="chkclassSportQuestion i-checks" value="@InternetQuestion.QuestionValue" />
                                            </td>
                                        }
                                        else
                                        {
                                            <td>
                                                <input type="checkbox" id="@checkBoxId" class="chkclassMagazinesQuestion i-checks" value="@InternetQuestion.QuestionValue" />
                                            </td>
                                        }

                                        <td id="@tdId" style="padding-left:15px;">
                                            @InternetQuestion.QuestionName
                                        </td>
                                    </tr>
                                </table>

                            }
                        </div>


                    </div>


                    <div class="form-group">
                        <div class="col-lg-offset-3 col-lg-1">
                            <button class="btn btn-blue" type="submit">Update</button>

                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    </div>
