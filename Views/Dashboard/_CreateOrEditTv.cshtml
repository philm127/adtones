@model EFMVC.Web.ViewModels.CampaignProfileTvFormModel
@Html.HiddenFor(model => model.CampaignProfileTvId)
@Html.HiddenFor(model => model.CampaignProfileId)
<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Radio</h5>

            </div>
            <div class="ibox-content">
                <form class="form-horizontal">
                    <div class="form-group">
                        @Html.LabelFor(model => model.SatalliteQuestion, new { @class = "col-lg-3 control-label" })


                        <div class="col-lg-9 editor-field" style="line-height:28px;">

                            @foreach (var SatalliteQuestion in @Model.SatalliteQuestion)
                            {
                                var checkBoxId = "chk" + SatalliteQuestion.QuestionValue;
                                var tdId = "td" + SatalliteQuestion.QuestionValue;

                                <table>
                                    <tr>
                                        @if (SatalliteQuestion.Selected)
                                        {
                                            <td>
                                                <input type="checkbox" id="@checkBoxId" checked class="chkclassSocialNetworking i-checks" value="@SatalliteQuestion.QuestionValue" />
                                            </td>
                                        }
                                        else
                                        {
                                            <td>
                                                <input type="checkbox" id="@checkBoxId" class="chkclassNationalQuestion i-checks" value="@SatalliteQuestion.QuestionValue" />
                                            </td>
                                        }

                                        <td id="@tdId" style="padding-left:15px;">
                                            @SatalliteQuestion.QuestionName
                                        </td>
                                    </tr>
                                </table>

                            }
                        </div>


                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.CableQuestion, new { @class = "col-lg-3 control-label" })


                        <div class="col-lg-9 editor-field" style="line-height:28px;">
