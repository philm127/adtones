@using EFMVC.Web.ViewModels
@model IEnumerable<AdvertFormModel> 

    <div class="col-lg-12">
        <div class="ibox">
            <div class="ibox-title">
                <h5>List of adverts</h5>
            </div>
            <div class="ibox-content">
                @if (Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                    string mediaLocation = @"~" + item.MediaFileLocation;
                <button class="accordion_advert" id='@item.AdvertId'><a href='@Url.Action("AdvertDetails", "Advert", new { @id = item.AdvertId }) '>@item.AdvertName</a></button>
                <div class="panel">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>
                                        Brand
                                    </th>
                                    <th>
                                        Listen
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        @item.Brand
                                    </td>
                                    <td>
                                        @Html.Html5().Media.Audio(@item.AdvertName, mediaLocation, "", new { @class = "audio-small" })
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                </div>

                    }
                }

            </div>
        </div>
    </div>

<script type="text/javascript">

    function enablediv(currentdiv) {
        $(currentdiv).css("background-color", "#1e90ff");
    }
</script>
